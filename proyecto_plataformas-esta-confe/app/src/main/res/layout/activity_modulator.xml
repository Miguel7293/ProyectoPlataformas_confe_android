<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModulatorActivity"
    android:background="#446B64">

    <Button
        android:id="@+id/btnPlayOriginal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Original"
        android:background="@drawable/button_rouder"
        android:backgroundTint="#698379"
        android:textColor="#E3F2E9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
 />

    <Button
        android:id="@+id/btnApplyModulator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Modulator"
        android:background="@drawable/button_rouder"
        android:backgroundTint="#698379"
        android:textColor="#E3F2E9"
        app:layout_constraintTop_toBottomOf="@id/btnPlayOriginal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
   />

</androidx.constraintlayout.widget.ConstraintLayout>
